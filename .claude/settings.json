{
  "permissions": {
    "allow": [
      "Bash(npm run test:run)",
      "Bash(npm run build)",
      "Bash(npm run dev)",
      "Bash(npx vitest run*)",
      "Bash(npx playwright*)",
      "Bash(npx tsc*)",
      "Bash(npm audit)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(gh auth status*)",
      "Bash(gh issue list*)",
      "Bash(gh issue view*)",
      "Bash(gh issue create*)",
      "Bash(gh issue close*)",
      "Bash(gh issue comment*)",
      "Bash(gh issue edit*)",
      "Bash(gh pr create*)",
      "Bash(gh pr view*)",
      "Bash(gh pr list*)",
      "Bash(gh label list*)",
      "Bash(git checkout*)",
      "Bash(git branch*)",
      "Bash(git push*)",
      "Bash(git worktree*)"
    ]
  },
  "PreToolUse": [
    {
      "matcher": "Bash",
      "hooks": [
        {
          "type": "command",
          "command": "bash .claude/hooks/block-master-commit.sh",
          "timeout": 5
        }
      ]
    }
  ]
}
